stage('Ansible Playbook - Bastion Host') {
    steps {
        dir('ansible') {
            sh 'ansible-playbook -i inventory.json bastion_playbook.yml --private-key=/home/ubuntu/jenkins.pem'
        }
    }
}
stage('Ansible Playbook - MySQL Server') {
    steps {
        dir('ansible') {
            sh 'ansible-playbook -i inventory.json mysql_playbook.yml --private-key=/home/ubuntu/jenkins.pem'
        }
    }
}
